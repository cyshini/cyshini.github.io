<section>
    <div class="row">
    {% for project in projects %}
        {% if (loop.index <= 2) %}
        <div class="column">
            <a href="{{ project.link }}" class="card-link">
                <div class="card {{ project.color }}" style="background-image: linear-gradient(180deg, rgba(0,0,0,0.9), rgba(0,0,0,0)), url('{{ project.thumbnail }}');">
                    <div class="card-content">
                        <div class="card-title">
                            <h2 class="title--s">{{ project.title }}</h2>
                            <img src="{{ project.pictogram }}" class="project-pictogram hide-on-mobile" width="40px" height="40px" alt="{{ project.title }} pictogram">
                        </div>
                        <p class="text--l">{{ project.summary }}</p>
                    </div>
                    <ul class="card-mention taglist">
                        <li>{{ project.tag01 }}</li>
                        <li>{{ project.tag02 }}</li>
                    </ul>
                </div>
            </a>
        </div>
        {% else %}
        {% endif %}
    {% endfor %}
    </div>

